<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <!-- Configuración base del checker -->
    <property name="charset" value="UTF-8"/>
    <property name="severity" value="warning"/>
    <property name="fileExtensions" value="java, properties, xml"/>

    <!-- Archivos a excluir -->

    <!-- Verifica que los archivos tengan una línea en blanco al final -->
    <module name="NewlineAtEndOfFile">
        <property name="lineSeparator" value="lf"/>
        <property name="fileExtensions" value="java"/>
    </module>

    <!-- Verifica las características del archivo translation -->
    <module name="Translation"/>

    <!-- Verifica el tamaño máximo de las líneas -->
    <module name="LineLength">
        <property name="fileExtensions" value="java"/>
        <property name="max" value="120"/>
        <property name="ignorePattern" value="^[ ]+[*].*" />
    </module>

</module>

<!-- Configuración específica para archivos Java -->
<module name="TreeWalker">
    <!-- Verifica que las importaciones estén ordenadas correctamente -->
    <module name="AvoidStarImport"/>
    <module name="RedundantImport"/>
    <module name="UnusedImports">
        <property name="processJavadoc" value="true"/>
    </module>

    <!-- Verifica constantes finales en mayúsculas -->
    <module name="ConstantName">
        <property name="format" value="^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$"/>
    </module>

    <!-- Verifica nombres de métodos -->
    <module name="MethodName"/>

    <!-- Verifica nombres de miembros de clase -->
    <module name="MemberName">
        <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
    </module>

    <!-- Verifica nombres de parámetros -->
    <module name="ParameterName">
        <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
    </module>

    <!-- Verifica nombres de variables locales -->
    <module name="LocalVariableName">
        <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
    </module>

    <!-- Verifica nombres de paquetes -->
    <module name="PackageName">
        <property name="format" value="^[a-z]+(\.[a-zA-Z_][a-zA-Z0-9_]*)*$"/>
    </module>

    <!-- Verifica nombres de clases -->
    <module name="TypeName">
        <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
    </module>

    <!-- Verifica el orden de modificadores -->
    <module name="ModifierOrder"/>

    <!-- Verifica la indentación (4 espacios) -->
    <module name="Indentation">
        <property name="basicOffset" value="4"/>
        <property name="braceAdjustment" value="0"/>
        <property name="caseIndent" value="4"/>
        <property name="throwsIndent" value="4"/>
        <property name="lineWrappingIndentation" value="4"/>
        <property name="arrayInitIndent" value="4"/>
    </module>

    <!-- Verifica llaves en líneas separadas -->
    <module name="LeftCurly">
        <property name="option" value="eol"/>
        <property name="tokens" value="ANNOTATION_DEF, CLASS_DEF, CTOR_DEF, ENUM_CONSTANT_DEF, ENUM_DEF, INTERFACE_DEF, LAMBDA, LITERAL_CASE, LITERAL_CATCH, LITERAL_DEFAULT, LITERAL_DO, LITERAL_ELSE, LITERAL_FINALLY, LITERAL_FOR, LITERAL_IF, LITERAL_SWITCH, LITERAL_SYNCHRONIZED, LITERAL_TRY, LITERAL_WHILE, METHOD_DEF, OBJBLOCK, STATIC_INIT"/>
    </module>

    <!-- Verifica llaves de cierre en líneas separadas -->
    <module name="RightCurly">
        <property name="option" value="alone"/>
        <property name="tokens" value="LITERAL_TRY, LITERAL_CATCH, LITERAL_FINALLY, LITERAL_IF, LITERAL_ELSE, LITERAL_DO"/>
    </module>

    <!-- Verifica paréntesis separados -->
    <module name="ParenPad">
        <property name="tokens" value="CTOR_CALL, LITERAL_NEW, METHOD_CALL, SUPER_CTOR_CALL"/>
    </module>

    <!-- Verifica espacios en blanco -->
    <module name="WhitespaceAround">
        <property name="allowEmptyConstructors" value="true"/>
        <property name="allowEmptyLambdas" value="true"/>
        <property name="allowEmptyMethods" value="true"/>
        <property name="allowEmptyTypes" value="true"/>
        <property name="ignoreEnhancedForColon" value="false"/>
    </module>

    <!-- Verifica espacios en blanco después de comas -->
    <module name="CommaWhitespace"/>

    <!-- Verifica espacios en blanco después de punto y coma -->
    <module name="SemicolonWhitespace"/>

    <!-- Verifica espacios en blanco en tipos genéricos -->
    <module name="GenericWhitespace"/>

    <!-- Verifica espacios en blanco en métodos -->
    <module name="MethodParamPad"/>

    <!-- Verifica operadores -->
    <module name="OperatorWrap">
        <property name="option" value="nl"/>
        <property name="tokens" value="BAND, BOR, BSR, BXOR, DIV, EQUAL, GE, GT, LAND, LE, LITERAL_INSTANCEOF, LOR, LT, MINUS, MOD, NOT_EQUAL, PLUS, QUESTION, SL, SR, STAR"/>
    </module>

    <!-- Verifica anotaciones -->
    <module name="AnnotationLocation">
        <property name="tokens" value="ANNOTATION_DEF"/>
        <property name="allowSamelineMultipleAnnotations" value="true"/>
    </module>
    <module name="AnnotationLocation">
        <property name="tokens" value="ANNOTATION_FIELD_DEF"/>
        <property name="allowSamelineMultipleAnnotations" value="true"/>
    </module>
    <module name="AnnotationLocation">
        <property name="tokens" value="ANNOTATION_GETTER"/>
        <property name="allowSamelineMultipleAnnotations" value="true"/>
    </module>
    <module name="AnnotationLocation">
        <property name="tokens" value="ANNOTATION_SETTER"/>
        <property name="allowSamelineMultipleAnnotations" value="true"/>
    </module>

    <!-- Verifica que no haya constructores vacíos redundantes -->
    <module name="RedundantModifier">
        <property name="tokens" value="METHOD_DEF, VARIABLE_DEF, ANNOTATION_FIELD_DEF, ANNOTATION_GETTER, ANNOTATION_SETTER"/>
    </module>

    <!-- Verifica declaraciones múltiples en una sola línea -->
    <module name="OneStatementPerLine"/>

    <!-- Verifica que no haya múltiples declaraciones de variables en una línea -->
    <module name="MultipleVariableDeclarations"/>

    <!-- Verifica arrays -->
    <module name="ArrayTypeStyle"/>
    <module name="AvoidInlineConditionals"/>
    <module name="SimplifyBooleanExpression"/>
    <module name="SimplifyBooleanReturn"/>
    <module name="UpperEll"/>

    <!-- Verifica longitud máxima de método (50 líneas) -->
    <module name="MethodLength">
        <property name="tokens" value="METHOD_DEF"/>
        <property name="max" value="50"/>
        <property name="countEmpty" value="false"/>
    </module>

    <!-- Verifica archivos JavaDoc -->
    <module name="JavadocPackage"/>
    <module name="JavadocType">
        <property name="scope" value="public"/>
    </module>
    <module name="JavadocMethod">
        <property name="scope" value="public"/>
        <property name="allowMissingParamTags" value="true"/>
        <property name="allowMissingReturnTag" value="true"/>
    </module>
    <module name="JavadocVariable">
        <property name="scope" value="protected"/>
    </module>

    <!-- Verifica que no se oculten variables -->
    <module name="HiddenField">
        <property name="ignoreSetter" value="true"/>
        <property name="ignoreConstructorParameter" value="true"/>
        <property name="ignoreAbstractMethods" value="false"/>
        <property name="setterCanReturnItsClass" value="true"/>
    </module>

    <!-- Verifica campos finales estáticos -->
    <module name="StaticVariableName"/>

    <!-- Verifica vocabulario final -->
    <module name="IllegalCatch">
        <property name="illegalClassNames" value="Throwable, Exception, RuntimeException"/>
    </module>

    <!-- Comentarios -->
    <module name="CommentsIndentation"/>
    <module name="TodoComment">
        <property name="format" value="(TODO)|(XXX)|(FIXME)"/>
        <property name="severity" value="info"/>
    </module>
</module>
